{
  "name": "nxbm",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "engines": {
    "node": ">=8.11.1"
  },
  "author": "Jordon de Hoog",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "lerna run lint",
    "lerna": "lerna",
    "precommit": "lint-staged",
    "commit": "git-cz",
    "clean": "lerna clean --yes",
    "nuke": "npm run clean && rimraf node_modules",
    "bootstrap": "lerna bootstrap",
    "reboot": "npm run nuke && yarn && npm run build",
    "dep": "./tools/dep.sh",
    "do": "./tools/run.sh",
    "build": "./tools/build.sh",
    "build:lib": "tsc --build packages/",
    "build:src": "lerna run build",
    "prebuild:packages": "npm run build",
    "build:packages": "npm run build standalone",
    "dev:lib": "tsc --build --watch packages/",
    "dev:standalone": "npx lerna run dev --stream --scope @nxbm/standalone",
    "dev:src": "concurrently --kill-others 'npm run do web serve' 'lerna run dev:start'",
    "package:standalone": "npm run build:packages && lerna run copy:standalone"
  },
  "devDependencies": {
    "commitizen": "^2.10.1",
    "concurrently": "^4.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "lerna": "^3.1.4",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.1",
    "typescript": "^3.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/{src,test}/**/*.ts": [
      "tslint --project ./packages/tsconfig.base.json --fix",
      "git add"
    ],
    "packages/**/*.{ts,vue,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
