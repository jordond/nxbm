{
  "name": "nxbm",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "engines": {
    "node": ">=8.11.1"
  },
  "author": "Jordon de Hoog",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "precommit": "lint-staged",
    "commit": "git-cz",
    "build": "lerna run build",
    "build:api": "npm run build -- --scope @nxbm/api",
    "build:web": "npm run build -- --scope @nxbm/web",
    "lint": "lerna run lint --parallel",
    "dev": "lerna run dev serve --parallel"
  },
  "devDependencies": {
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "lerna": "^3.1.4",
    "prettier": "^1.14.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/api/{src,test}/**/*.ts": [
      "prettier --write",
      "tslint --project packages/api/tsconfig.json --fix",
      "git add"
    ],
    "packages/web/**/*.{ts,vue}": [
      "prettier --write",
      "lerna run lint --scope @nxbm/web",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
