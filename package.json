{
  "name": "nxbm",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "engines": {
    "node": ">=8.11.1"
  },
  "author": "Jordon de Hoog",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lerna": "lerna",
    "precommit": "lint-staged",
    "commit": "git-cz",
    "clean": "lerna run clean",
    "clean:all": "npm run clean && lerna clean --yes",
    "nuke": "npm run clean:all && rimraf node_modules",
    "bootstrap": "lerna bootstrap",
    "reboot": "npm run nuke && yarn && npm run build",
    "dep": "./tools/dep.sh",
    "do": "./tools/run.sh",
    "build": "./tools/build.sh",
    "build:lib": "lerna run build --stream --ignore @nxbm/standalone --ignore @nxbm/web ",
    "build:src": "lerna run build --stream --parallel --scope @nxbm/web",
    "build:packages":"lerna run build --stream --scope @nxbm/standalone",
    "lint": "lerna run lint",
    "dev:lib": "lerna run dev --stream --parallel --ignore @nxbm/standalone",
    "dev:src": "concurrently 'npm run do web serve' 'npm run dev:start api-backend'",
    "dev:all":"concurrently 'npm run dev:lib' 'pm run dev:src'",
    "dev": "./tools/dev.sh",
    "package:standalone": "npm run build standalone && lerna run copy:standalone"
  },
  "devDependencies": {
    "commitizen": "^2.10.1",
    "concurrently": "^4.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "lerna": "^3.1.4",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/{src,test}/**/*.ts": [
      "tslint --project ./tsconfig.json --fix",
      "git add"
    ],
    "packages/**/*.{ts,vue,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
