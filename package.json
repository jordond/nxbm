{
  "name": "nxbm",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "engines": {
    "node": ">=8.11.1"
  },
  "author": "Jordon de Hoog",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "lerna run lint --stream",
    "lerna": "lerna",
    "precommit": "lint-staged",
    "commit": "git-cz",
    "clean": "lerna clean --yes",
    "nuke": "npm run clean && rimraf node_modules",
    "bootstrap": "lerna bootstrap",
    "reboot": "npm run nuke && yarn && npm run build",
    "dep": "./tools/dep.sh",
    "do": "./tools/run.sh",
    "build": "npm run build:lib && npm run build:dist && npm run build:bin",
    "build:lib": "tsc --build packages/ --verbose",
    "build:dist": "lerna run build --stream --scope @nxbm/web",
    "build:bin": "lerna run build --stream --scope @nxbm/standalone",
    "copy:web": "cpx 'build/dist/web/**/*'",
    "prepackage:standalone":"rimraf build/bin/standalone",
    "package:standalone": "npm run build && npm run copy:web build/bin/standalone/public",
    "dev:lib": "tsc --build --watch packages/",
    "dev:standalone": "npx lerna run dev --stream --scope @nxbm/standalone",
    "dev:src": "concurrently --kill-others 'npm run do web serve' 'lerna run dev:start'"
  },
  "devDependencies": {
    "commitizen": "^2.10.1",
    "concurrently": "^4.0.1",
    "cpx": "^1.5.0",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "lerna": "^3.1.4",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.1",
    "typescript": "^3.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/{src,test}/**/*.ts": [
      "tslint --project ./packages/tsconfig.base.json --fix",
      "git add"
    ],
    "packages/**/*.{ts,vue,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
