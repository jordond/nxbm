{
  "name": "@nxbm/standalone",
  "version": "0.0.0",
  "description": "",
  "main": "dist/nxbm.js",
  "bin": {
    "nxbm": "dist/nxbm.js"
  },
  "author": "Jordon de Hoog",
  "license": "MIT",
  "scripts": {
    "lint": "tslint --project ./ --fix -t codeFrame",
    "clean": "rimraf dist/*",
    "prebuild": "npm run clean",
    "build": "webpack",
    "postbuild": "cpx '../web/dist/**/*' ./dist/public",
    "precopy:standalone": "rimraf ../../dist/standalone",
    "copy:standalone": "cpx 'dist/**/*' ../../dist/standalone",
    "dev": "nodemon src/index.ts -- --root=../../tmp --level=info --env development"
  },
  "devDependencies": {
    "@nxbm/api-backend": "^0.0.0",
    "@nxbm/api-server": "^0.0.0",
    "@nxbm/core": "^0.0.0",
    "@nxbm/tslint-rules": "^0.0.0",
    "@nxbm/types": "^0.0.0",
    "@nxbm/utils": "^0.0.0",
    "@types/body-parser": "^1.17.0",
    "@types/copy-webpack-plugin": "^4.4.2",
    "@types/fs-extra": "^5.0.4",
    "@types/inert": "^5.1.1",
    "@types/node": "^10.10.1",
    "@types/read-pkg": "^3.0.0",
    "@types/webpack": "^4.4.12",
    "copy-webpack-plugin": "^4.5.2",
    "cpx": "^1.5.0",
    "fs-extra": "^7.0.0",
    "hapi": "^17.6.0",
    "inert": "^5.1.0",
    "nodemon": "^1.18.3",
    "read-pkg": "^4.0.1",
    "rimraf": "^2.6.2",
    "ts-loader": "^5.1.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3",
    "webpack": "^4.19.1",
    "webpack-cli": "^3.1.0"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "verbose": false,
    "watch": [
      "src/**/*"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "execMap": {
      "ts": "ts-node --files"
    }
  }
}
