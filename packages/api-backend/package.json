{
  "name": "@nxbm/api-backend",
  "version": "0.0.0",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Jordon de Hoog",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "lint": "tslint --project ./ --fix -t codeFrame",
    "clean": "rimraf dist/*",
    "prebuild": "npm run clean",
    "build": "tsc",
    "dev": "tsc -w",
    "dev:start": "nodemon tools/dev.ts -- --root=../../tmp --level debug --port 9999 --env development"
  },
  "devDependencies": {
    "@nxbm/api-endpoints": "^0.0.0",
    "@nxbm/api-server": "^0.0.0",
    "@nxbm/core": "^0.0.0",
    "@nxbm/core-db": "^0.0.0",
    "@nxbm/core-files": "^0.0.0",
    "@nxbm/tslint-rules": "^0.0.0",
    "@nxbm/types": "^0.0.0",
    "@nxbm/utils": "^0.0.0",
    "@types/fs-extra": "^5.0.4",
    "@types/node": "^10.10.1",
    "cpx": "^1.5.0",
    "fs-extra": "^7.0.0",
    "nodemon": "^1.18.3",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "verbose": false,
    "watch": [
      "dist"
    ],
    "ext": "js",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "execMap": {
      "ts": "ts-node --files"
    }
  }
